rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if a user is the owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Profile Pictures ---
    // Users can read anyone's avatar.
    // Users can only write/update their own avatar in their own folder.
    match /avatars/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }
    
    // --- Chat Attachments ---
    function isChatMember(chatId) {
        return request.auth.uid in get(/databases/(default)/documents/chats/$(chatId)).data.members;
    }
    
    match /chat_images/{chatId}/{fileName} {
        // Allow read and write only if the user is a member of the chat.
        allow read, write: if isChatMember(chatId);
    }

    // Fallback rule: Disallow all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
