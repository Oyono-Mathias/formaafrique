
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check for instructor role
    function isFormateur() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'formateur';
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if two users have the same formationId
    function haveSameFormation(uid1, uid2) {
      let user1Formation = get(/databases/$(database)/documents/users/$(uid1)).data.formationId;
      let user2Formation = get(/databases/$(database)/documents/users/$(uid2)).data.formationId;
      return user1Formation == user2Formation;
    }
    
    function isUserInFormation(formationId) {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.formationId == formationId;
    }

    // Rules for User Profiles
    match /users/{userId} {
      // Any authenticated user can read a user profile
      allow read: if request.auth != null;
      // Only the user themselves or an admin can write to their profile
      allow write: if isOwner(userId) || isAdmin();
    }

    // Rules for Courses, Categories, Modules, Videos (Read-only for most users)
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /formations/{formationId} {
      allow read: if true;
      allow write: if isAdmin() || isFormateur(); 
    }
    
    match /formations/{formationId}/modules/{moduleId} {
       allow read: if true;
       allow write: if isAdmin() || isFormateur();
    }

     match /formations/{formationId}/modules/{moduleId}/videos/{videoId} {
       allow read: if true;
       allow write: if isAdmin() || isFormateur();
    }

     match /courses/{courseId}/enrollments/{enrollmentId} {
       allow read, write: if request.auth != null;
    }

    // Rules for User-specific data (Progress, Enrollments, Wishlist)
    match /users/{userId}/{subcollection}/{docId} {
        allow read, write, delete: if isOwner(userId);
    }
    match /wishlist/{wishId} {
        allow read, create: if request.auth.uid == request.resource.data.userId;
        allow delete: if request.auth.uid == get(/databases/$(database)/documents/wishlist/$(wishId)).data.userId;
    }

    // Rules for Instructor Requests
    match /instructor_requests/{requestId} {
        allow create: if isOwner(request.resource.data.userId);
        allow read, update: if isAdmin();
    }
    
    // Rules for Community Posts
    match /community_posts/{postId} {
        allow read: if request.auth != null;
        allow create: if isOwner(request.resource.data.authorId) && isUserInFormation(request.resource.data.formationId);
        allow update, delete: if isOwner(get(/databases/$(database)/documents/community_posts/$(postId)).data.authorId) || isAdmin();
    }

    // --- Social & Messaging Rules ---

    // Rules for Friend Requests
    match /friendRequests/{requestId} {
      allow create: if isOwner(request.resource.data.from);
      allow read, update, delete: if 
          isOwner(resource.data.from) || 
          isOwner(resource.data.to);
    }

    // Rules for Chat metadata
    match /chats/{chatId} {
      // Allow read/update if the user is a member of the chat
      allow read, update: if request.auth.uid in resource.data.members;
      
      // Allow creation only if the two members have the same formationId
      allow create: if request.resource.data.members.size() == 2
                    && request.auth.uid in request.resource.data.members
                    && haveSameFormation(request.resource.data.members[0], request.resource.data.members[1]);
      
      allow delete: if false; 
    }
    
    // Rules for Messages within a chat
    match /chats/{chatId}/messages/{messageId} {
      function isChatMember() {
        return request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
      }

      // Allow read if the user is a member of the chat
      allow read: if isChatMember();
      
      // Allow create if the user is a member and the sender of the message
      allow create: if isChatMember() && isOwner(request.resource.data.from);
      
      // Only the sender can update/delete their own message
      allow update, delete: if isChatMember() && isOwner(get(/databases/$(database)/documents/chats/$(chatId)/messages/$(messageId)).data.from);
    }
    
    // Rules for Group Chats
    match /group_chats/{chatId} {
        // Anyone in the formation can read the group chat info
        allow read: if isUserInFormation(resource.data.formationId);
        // Only admins can create/update group chat metadata
        allow create, update, delete: if isAdmin();
    }
    
    match /group_chats/{chatId}/messages/{messageId} {
        // Allow read/write if the user belongs to the formation of the chat
        allow read, create: if isUserInFormation(get(/databases/$(database)/documents/group_chats/$(chatId)).data.formationId);
        // Allow update/delete only for the message author or an admin
        allow update, delete: if isOwner(get(/databases/$(database)/documents/group_chats/$(chatId)/messages/$(messageId)).data.authorId) || isAdmin();
    }
    
    // Rules for Notifications
    match /notifications/{notificationId} {
        allow read, update, delete: if isOwner(resource.data.toUid);
        allow create: if request.auth != null; 
    }
    
    // Rules for Moderation
    match /moderationLogs/{logId} {
        allow read, write: if isAdmin();
    }
    match /aiFlags/{flagId} {
        allow read, write: if isAdmin();
        allow create: if request.auth != null;
    }
    match /moderationAppeals/{appealId} {
        allow create: if isOwner(request.resource.data.userId);
        allow read, update: if isAdmin();
    }

  }
}

    