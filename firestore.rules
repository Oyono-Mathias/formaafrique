
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isFormateurValide(userId) {
      let user = get(/databases/$(database)/documents/users/$(userId)).data;
      return user.role == 'formateur' && user.validation_status == 'validated';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isCourseOwner(courseId) {
        return get(/databases/$(database)/documents/formations/$(courseId)).data.authorId == request.auth.uid;
    }
    
    function isEnrolled(courseId) {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(courseId));
    }

    function haveSameFormation(uid1, uid2) {
      let user1Formation = get(/databases/$(database)/documents/users/$(uid1)).data.formationId;
      let user2Formation = get(/databases/$(database)/documents/users/$(uid2)).data.formationId;
      return user1Formation != null && user1Formation == user2Formation;
    }
    
    // --- Collection Rules ---

    // USERS: Users can read public profiles. They can only write to their own profile,
    // and cannot change their role or validation status. Admins can update any field.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if isOwner(userId) && !('role' in request.resource.data) && !('validation_status' in request.resource.data)
                      || isAdmin();
      // Allow create for new user signup. Role must be 'etudiant'.
      allow create: if isOwner(userId) && request.resource.data.role == 'etudiant';
    }
    
    // USER SUBCOLLECTIONS (PROGRESS, etc.): Only the owner can read/write.
    match /users/{userId}/{subcollection}/{docId} {
        allow read, write, create, delete: if isOwner(userId);
    }
    
    // FORMATIONS:
    // Read: Logged-in users can read published courses.
    // Create: Validated instructors and admins can create.
    // Update: Only the course owner (if validated) or an admin can update.
    // Delete: Only admin can delete.
    match /formations/{formationId} {
      allow read: if request.resource.data.published == true || isEnrolled(formationId) || isAdmin() || isCourseOwner(formationId);
      allow create: if isFormateurValide(request.auth.uid) || isAdmin();
      allow update: if (isFormateurValide(request.auth.uid) && isCourseOwner(formationId)) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // MODULES & VIDEOS: Inherit permissions from parent formation.
    match /formations/{formationId}/modules/{moduleId} {
       allow read: if get(/databases/$(database)/documents/formations/$(formationId)).data.published == true || isAdmin() || isCourseOwner(formationId);
       allow create, update, delete: if (isFormateurValide(request.auth.uid) && isCourseOwner(formationId)) || isAdmin();
    }

    match /formations/{formationId}/modules/{moduleId}/videos/{videoId} {
       allow read: if get(/databases/$(database)/documents/formations/$(formationId)).data.published == true || isAdmin() || isCourseOwner(formationId);
       allow create, update, delete: if (isFormateurValide(request.auth.uid) && isCourseOwner(formationId)) || isAdmin();
    }

    // INSTRUCTOR APPLICATIONS: Users can create their own application. Admins can read/update all.
    match /instructor_requests/{requestId} {
        allow create: if isOwner(request.resource.data.userId);
        allow read, update: if isAdmin();
    }

    // MESSAGING & SOCIAL
    match /chats/{chatId} {
      // Allow read/update if user is a member of the chat.
      allow read, update: if request.auth.uid in resource.data.members;
      // Allow create only if users are in the same formation group.
      allow create: if request.auth.uid in request.resource.data.members 
                      && haveSameFormation(request.resource.data.members[0], request.resource.data.members[1]);
    }
    
    match /chats/{chatId}/messages/{messageId} {
      function isChatMember() {
        return request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
      }
      allow read, create: if isChatMember();
      allow update, delete: if isChatMember() && isOwner(get(/databases/$(database)/documents/chats/$(chatId)/messages/$(messageId)).data.from);
    }
    
    // Group chats based on formation
    match /group_chats/{chatId} {
        allow read, create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.formationId == resource.data.formationId;
    }
    match /group_chats/{chatId}/messages/{messageId} {
        allow read, create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.formationId == get(/databases/$(database)/documents/group_chats/$(chatId)).data.formationId;
    }


    match /friendRequests/{requestId} {
      allow create: if isOwner(request.resource.data.from);
      allow read, update, delete: if isOwner(resource.data.from) || isOwner(resource.data.to);
    }
    
    match /notifications/{notificationId} {
      allow read, write: if isOwner(resource.data.toUid);
    }

    // ADMIN-ONLY COLLECTIONS
    match /admin_notifications/{notificationId} {
        allow read, write, create: if isAdmin();
    }
    
    match /moderationLogs/{logId} {
        allow read, create: if isAdmin(); // AI Function can write, admin can read
    }

    match /aiFlags/{flagId} {
        allow read, create, update: if isAdmin(); // AI can create, admin can update
    }
    
    match /tutorFeedbacks/{feedbackId} {
      allow create: if request.auth != null;
      allow read, delete: if isAdmin();
    }


    // OPEN COLLECTIONS (Read-only for most users)
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // DONATIONS: User can create a donation in 'pending' state.
    // Only a trusted server process (webhook) can update it to 'success'.
    match /donations/{donationId} {
      allow read: if isOwner(resource.data.donateurId) || isAdmin();
      allow create: if isOwner(request.resource.data.donateurId) && request.resource.data.statut == 'en_attente';
      allow update: if false; // Deny all client-side updates.
    }
  }
}
